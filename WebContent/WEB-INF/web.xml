	</servlet-mapping>
	<servlet>
		<servlet-name>FilesController</servlet-name>
		<servlet-class>com.lzlz.blog.controller.FilesController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FilesController</servlet-name>
		<url-pattern>/FilesController</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FriendController</servlet-name>
		<servlet-class>com.lzlz.blog.controller.FriendController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FriendController</servlet-name>
		<url-pattern>/FriendController</url-pattern>
